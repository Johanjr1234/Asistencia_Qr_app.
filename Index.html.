    <script>
        // --- LÓGICA DE FOTO (FileReader) ---
        let currentPhotoBase64 = null;

        function previewPhoto(input) {
            const file = input.files[0];
            if (file) {
                // Validación de tamaño (Max 2MB para no bloquear navegador)
                if(file.size > 2 * 1024 * 1024) {
                    alert("La imagen es muy pesada. Intenta con una menor a 2MB.");
                    return;
                }

                const reader = new FileReader();
                reader.onload = function(e) {
                    currentPhotoBase64 = e.target.result; // Aquí convertimos la imagen a texto Base64
                    // Solo mostramos un mensaje de "Cargada", la previsualización real ocurre al dar "Generar"
                    input.parentElement.querySelector('span').textContent = "Foto cargada: " + file.name;
                    input.parentElement.classList.add('border-indigo-500', 'bg-indigo-50');
                }
                reader.readAsDataURL(file);
            }
        }

        // --- SISTEMA ---
        let html5QrcodeScanner = null;
        let attendanceData = JSON.parse(localStorage.getItem('attendance_log_v2')) || [];
        
        function showTab(tabId) {
            document.querySelectorAll('section').forEach(s => s.classList.add('hidden'));
            document.getElementById('tab-' + tabId).classList.remove('hidden');
            if (tabId === 'list') renderAttendanceTable();
            if (tabId !== 'scan' && html5QrcodeScanner) stopScanner();
        }

        function generateCarnet() {
            const name = document.getElementById('input-name').value.trim();
            const id = document.getElementById('input-id').value.trim();
            const role = document.getElementById('input-role').value;

            if (!name || !id) { alert("Faltan datos (Nombre o ID)"); return; }

            // 1. Configurar datos visuales
            document.getElementById('card-name').textContent = name;
            document.getElementById('card-id').textContent = `ID: ${id}`;
            document.getElementById('card-role').textContent = role;

            // 2. Configurar la foto
            const imgElement = document.getElementById('card-photo-img');
            const iconElement = document.getElementById('card-photo-icon');
            
            if (currentPhotoBase64) {
                imgElement.src = currentPhotoBase64;
                imgElement.classList.remove('hidden');
                iconElement.classList.add('hidden');
            } else {
                imgElement.classList.add('hidden');
                iconElement.classList.remove('hidden');
            }

            // 3. Generar QR (¡SIN LA FOTO ADENTRO!)
            // Solo guardamos los datos de texto ligeros
            const qrData = JSON.stringify({ id, name, role, type: 'ACCESS_V2' });
            
            new QRious({
                element: document.getElementById('qr-canvas'),
                value: qrData,
                size: 120,
                level: 'H'
            });

            // 4. Mostrar
            document.getElementById('preview-placeholder').classList.add('hidden');
            document.getElementById('carnet-preview').classList.remove('hidden');
            document.getElementById('carnet-preview').classList.add('flex');
            document.getElementById('btn-print').classList.remove('hidden');
        }

        // --- ESCÁNER ---
        function startScanner() {
            document.getElementById('last-scan-info').classList.add('hidden');
            if (html5QrcodeScanner) return;

            html5QrcodeScanner = new Html5Qrcode("reader");
            html5QrcodeScanner.start(
                { facingMode: "environment" },
                { fps: 10, qrbox: { width: 250, height: 250 } },
                (decodedText) => {
                    handleScanSuccess(decodedText);
                },
                () => {}
            ).then(() => {
                document.getElementById('scan-overlay').classList.remove('hidden');
            });
        }

        function stopScanner() {
            if (html5QrcodeScanner) {
                html5QrcodeScanner.stop().then(() => {
                    html5QrcodeScanner.clear();
                    html5QrcodeScanner = null;
                    document.getElementById('scan-overlay').classList.add('hidden');
                });
            }
        }

        function handleScanSuccess(text) {
            if(html5QrcodeScanner) html5QrcodeScanner.pause(true);

            try {
                const data = JSON.parse(text);
                if (data.type !== 'ACCESS_V2') throw new Error("QR antiguo o inválido");

                // Registrar
                const now = new Date();
                const newEntry = {
                    id: data.id,
                    name: data.name,
                    role: data.role,
                    timestamp: now.toISOString(),
                    displayTime: now.toLocaleTimeString()
                };

                // Evitar doble escaneo rápido (30 seg)
                if (attendanceData.length > 0 && attendanceData[0].id === newEntry.id) {
                    const diff = now - new Date(attendanceData[0].timestamp);
                    if (diff < 30000) throw new Error("Ya registrado recientemente");
                }

                attendanceData.unshift(newEntry);
                localStorage.setItem('attendance_log_v2', JSON.stringify(attendanceData));

                // Feedback
                document.getElementById('scan-result-name').textContent = data.name;
                document.getElementById('scan-result-time').textContent = newEntry.displayTime;
                document.getElementById('last-scan-info').classList.remove('hidden');
                
                // Sonido
                playBeep();

                setTimeout(() => {
                    if(html5QrcodeScanner) html5QrcodeScanner.resume();
                    document.getElementById('last-scan-info').classList.add('hidden');
                }, 2000);

            } catch (e) {
                console.log(e);
                alert("Error: " + (e.message || "QR Inválido"));
                setTimeout(() => { if(html5QrcodeScanner) html5QrcodeScanner.resume(); }, 1000);
            }
        }

        // --- EXPORTAR Y UTILIDADES ---
        function renderAttendanceTable() {
            const tbody = document.getElementById('attendance-tbody');
            tbody.innerHTML = attendanceData.length ? '' : '<tr><td colspan="3" class="p-4 text-center text-slate-400">Sin registros</td></tr>';
            attendanceData.forEach(row => {
                const tr = document.createElement('tr');
                tr.className = "border-b";
                tr.innerHTML = `<td class="p-3 font-mono text-xs">${row.displayTime}</td><td class="p-3">${row.name}</td><td class="p-3 text-xs text-indigo-600 uppercase">${row.role}</td>`;
                tbody.appendChild(tr);
            });
        }

        function clearHistory() {
            if(confirm("¿Borrar todo?")) {
                attendanceData = [];
                localStorage.removeItem('attendance_log_v2');
                renderAttendanceTable();
            }
        }
        
        function exportToCSV() {
            let csv = "Fecha,Nombre,ID,Rol\n" + attendanceData.map(row => `${row.timestamp},"${row.name}",${row.id},${row.role}`).join("\n");
            const link = document.createElement("a");
            link.href = "data:text/csv;charset=utf-8," + encodeURI(csv);
            link.download = "asistencia.csv";
            link.click();
        }

        const audioCtx = new (window.AudioContext || window.webkitAudioContext)();
        function playBeep() {
            if (audioCtx.state === 'suspended') audioCtx.resume();
            const o = audioCtx.createOscillator();
            const g = audioCtx.createGain();
            o.connect(g); g.connect(audioCtx.destination);
            o.type = "sine"; o.frequency.value = 880; g.gain.value = 0.1;
            o.start(); o.stop(audioCtx.currentTime + 0.1);
        }
        
        renderAttendanceTable();
    </script>
</body>
</html>


