        <!-- SECCIÓN ESCANEAR -->
        <section id="tab-scan" class="hidden space-y-6">
            <div class="bg-white p-6 rounded-xl shadow-md max-w-lg mx-auto">
                <h2 class="text-xl font-bold mb-4 text-center text-indigo-700">Punto de Asistencia</h2>
                <div class="relative bg-black rounded-lg overflow-hidden aspect-square mb-4 shadow-inner">
                    <div id="reader" class="w-full h-full"></div>
                    <div id="scan-overlay" class="absolute inset-0 pointer-events-none hidden border-2 border-indigo-500/50">
                        <div class="absolute top-0 left-0 w-full h-1 bg-indigo-500 shadow-[0_0_20px_rgba(99,102,241,0.8)] animate-scan"></div>
