                <div class="flex justify-center space-x-4 mb-4">
                    <button onclick="startScanner()" class="bg-emerald-600 text-white px-6 py-2 rounded shadow hover:bg-emerald-700 transition font-bold"><i class="fas fa-power-off mr-2"></i> INICIAR</button>
                    <button onclick="stopScanner()" class="bg-red-500 text-white px-6 py-2 rounded shadow hover:bg-red-600 transition font-bold"><i class="fas fa-stop mr-2"></i> PARAR</button>
                </div>
                <div id="last-scan-info" class="hidden bg-emerald-50 border border-emerald-200 rounded-lg p-4 text-center">
                    <div class="text-emerald-800 font-bold text-lg"><i class="fas fa-check-circle"></i> ¡Bienvenido!</div>
                    <div id="scan-result-name" class="text-slate-800 font-bold text-xl mt-1">Nombre</div>
                    <div id="scan-result-time" class="text-slate-500 text-sm">Hora</div>
                </div>
            </div>
        </section>

        <!-- SECCIÓN LISTA -->
        <section id="tab-list" class="hidden space-y-6">
