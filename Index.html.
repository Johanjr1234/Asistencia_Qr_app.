                                <i class="fas fa-cloud-upload-alt text-2xl mb-1"></i>
                                <span class="text-xs">Clic para subir foto</span>
                                <input type="file" id="input-photo" accept="image/*" class="hidden" onchange="previewPhoto(this)">
                            </label>
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-slate-600 mb-1">Nombre Completo</label>
                            <input type="text" id="input-name" placeholder="Ej: Ana López" class="w-full p-2 border rounded focus:ring-2 focus:ring-indigo-500 outline-none">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-600 mb-1">ID / Cédula</label>
                            <input type="text" id="input-id" placeholder="Ej: 12345678" class="w-full p-2 border rounded focus:ring-2 focus:ring-indigo-500 outline-none">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-600 mb-1">Cargo</label>
                            <select id="input-role" class="w-full p-2 border rounded focus:ring-2 focus:ring-indigo-500 outline-none">
                                <option value="Empleado">Empleado</option>
                                <option value="Estudiante">Estudiante</option>
                                <option value="Director">Director</option>
                                <option value="Visitante">Visitante</option>
                            </select>
                        </div>
                        <button onclick="generateCarnet()" class="w-full bg-indigo-600 text-white py-3 rounded hover:bg-indigo-700 transition font-bold shadow-lg mt-4">
                            <i class="fas fa-magic mr-2"></i> Generar Carnet
                        </button>
                    </div>

                    <!-- Vista Previa del Carnet -->
                    <div class="flex flex-col items-center">
                        <div id="carnet-preview" class="hidden w-[320px] h-[500px] bg-white rounded-xl shadow-2xl overflow-hidden relative border border-slate-200 flex-col">
                            <!-- Diseño de fondo abstracto -->
                            <div class="absolute top-0 w-full h-32 bg-indigo-600 rounded-b-[50%] scale-x-150"></div>
                            
                            <!-- Contenido -->
                            <div class="relative z-10 flex flex-col items-center h-full pt-8">
                                <h3 class="text-white font-bold text-lg tracking-widest mb-4">CREDENCIAL</h3>
                                
                                <!-- Foto de perfil circular -->
                                <div class="w-32 h-32 rounded-full border-4 border-white bg-slate-200 shadow-lg overflow-hidden flex items-center justify-center mb-3">
                                    <img id="card-photo-img" src="" class="w-full h-full object-cover hidden">
                                    <i id="card-photo-icon" class="fas fa-user text-4xl text-slate-400"></i>
                                </div>

                                <h2 id="card-name" class="text-xl font-bold text-slate-800 leading-tight px-4 text-center">Nombre</h2>
